{
  "title": "Order",
  "type": "object",
  "properties": {
    "orderId": { "type": "string" },
    "customer": { "$ref": "customer_schema.json#/$defs/Customer" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productId": { "type": "string" },
          "quantity": {
              "type": "integer",
              "exclusiveMaximum": 20,
              "multipleOf": 2,
              "minimum": 4
            }
        },
        "required": ["productId", "quantity"]
      }
    }
  },
  "required": ["orderId", "customer", "items"]
}
